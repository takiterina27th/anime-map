= link_to post_path(post), class: "show-link" do
  .card.h-100.thumbnail
    .card-top
      = image_tag post.image.url, class: 'card-top__img'
    .card-body
      %h5.card-title
        = post.name
      %p.card-user
        = post.user.nickname
      .text-right
        = fa_icon 'heart', class: 'icon'
        %span 
          = post.liked_users.count