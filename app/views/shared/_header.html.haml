%nav.sticky-top.navbar.navbar-expand-lg.navbar-dark.header{style: "background-color: rgb(0, 0, 0, 0.5);"}
  = link_to "AnimeMap", root_path, class: "navbar-brand"
  .navbar-collapse.collapse.w-100.order-3.dual-collapse2
    %ul.navbar-nav.ml-auto
      %li.nav-item
        = link_to "投稿一覧", display_posts_path, class: "nav-link"
      - if user_signed_in?
        %li.nav-item
          = link_to "投稿する", new_post_path, class: "nav-link"
        %li.nav-item
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link"
      - else
        %li.nav-item
          = link_to "ログイン", new_user_session_path, class: "nav-link"
        %li.nav-item
          = link_to "新規登録", new_user_registration_path, class: "nav-link"
    = search_form_for @q, url: search_posts_path, html: {class: "form-inline my-2 my-lg-0"} do |f|
      = f.text_field :name_cont , placeholder: "キーワードから検索", class: 'form-control mr-sm-2'
      = f.submit "検索", class: "btn btn-outline-success my-2 my-sm-0"